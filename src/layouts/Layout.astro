---
interface Props {
	title: string;
}

import '@fontsource-variable/onest'

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Game news portal made with Astro and Tailwind. Uses the RAWG API as source of information." />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
	:root {
		
	}

	html {
		font-family: 'Onest Variable', sans-serif;
		background: #13151a;
	}
</style>
